{
    "manifest_version": 2,
    "name": "Personally Identifiable Information Filter (NL)",
    "description": "Notifies you if there is an excessive usage of PII in a text field.",
    "version": "0.1",
    "icons": {
        "48": "assets/logos/a/PIILogo.png",
        "96": "assets/logos/a/PIILogo@2x.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "webNavigation"
    ],
    "background": {
        "scripts": ["build/service.js"]
    },
    "web_accessible_resources": [
        "assets/info.png",
        "assets/fonts/webfonts/*.*"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["build/content.js"],
        "run_at": "document_start"
    }]
}