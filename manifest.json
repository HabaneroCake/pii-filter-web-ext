{
    "manifest_version": 2,
    "name": "Personally Identifiable Information Filter",
    "description": "Notifies the user of excessive usage of PII in a field or request. Provides a severity indicator.",
    "version": "0.1",

    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "webNavigation"
    ],
    "background": {
        "scripts": ["build/service.js"]
    },
    "web_accessible_resources": [
        "assets/info.png",
        "assets/fonts/webfonts/*.*"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["build/content.js"],
        "run_at": "document_start"
    }]
}